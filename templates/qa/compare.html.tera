<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/compare.css">
    <script type="text/javascript">
      const pos = {{pos}};
      const next_pos = {{next_pos}};
      const start_time = {{start_time}};

      function are_equal(does_match, skip) {
        const xhttp = new XMLHttpRequest();
        xhttp.onload = function() {
          if (this.responseText == "OK") {
            document.location = "/qa/compare/" + next_pos;
          } else {
            alert("There was an error trying to apply the match");
          }
        };
        xhttp.open("POST", "/qa/compare/" + pos + "/apply", true);
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send(JSON.stringify({
          "approved": does_match,
          "skip": skip,
          "time": start_time
        }));
      }

      function approve() { are_equal(true, false); }
      function reject() { are_equal(false, false); }
      function skip() { are_equal(false, true); }
    </script>
  </head>
  <body>
    <div class="main">
      <div class="wrapper">
        <div>
          <h1><img src="/public/images/logo.png" />Compare</h1>
          <div class="data">
            <div class="spacer a"></div>
            <div class="spacer b"></div>
            <div class="product">
              <div class="img">
                <div class="a">
                  <img src="{{data["dh_imgage_url"]}}">
                </div>
                <div class="b">
                  <img src="{{data["match_image_url"]}}">
                </div>
              </div>
              <div class="name">
                <h2 class="a" title="{{data["dh_product_name"]}}">
                  <span>{{data["dh_product_name"]}}</span>
                </h2>
                <h2 class="b" title="{{data["match_product_name"]}}">
                  <span>{{data["match_product_name"]}}</span>
                </h2>
              </div>
              <div class="extra-data">
                <div class="a">
                  <div>
                    <div class="title">Size unit</div>
                    <div class="value">{{data["dh_size_unit_std"]}}</div>
                    <div class="title">Size</div>
                    <div class="value">{{data["dh_size_std"]}}</div>
                    <div class="title">Number of pieces</div>
                    <div class="value">{{data["dh_num_pieces"]}}</div>
                    <div class="title">Price</div>
                    <div class="value">{{data["dh_price"]}}</div>
                    <div class="title">SKU</div>
                    <div class="value">{{data["dh_sku"]}}</div>
                  </div>
                </div>
                <div class="b">
                  <div>
                    <div class="title">Size unit</div>
                    <div class="value">{{data["match_size_unit_std"]}}</div>
                    <div class="title">Size</div>
                    <div class="value">{{data["match_size_std"]}}</div>
                    <div class="title">Number of pieces</div>
                    <div class="value">{{data["match_num_pieces"]}}</div>
                    <div class="title">Price</div>
                    <div class="value">{{data["match_price"]}}</div>
                    <div class="title">SKU</div>
                    <div class="value">{{data["match_sku"]}}</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="options">
            <a href="javascript:approve();" class="button yes">
              YES
            </a>
            <span class="decision">
              Are the same?
            </span>
            <a href="javascript:reject()" class="button no">
              NO
            </a>
            <a href="javascript:skip()" class="button skip">
              SKIP
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
