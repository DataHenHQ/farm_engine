<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/public/css/compare.css">
    <script type="text/javascript">
      const pos = {{pos}};
      const next_pos = {{next_pos}};
      const start_time = {{start_time}};

      function are_equal(does_match, skip) {
        const xhttp = new XMLHttpRequest();
        xhttp.onload = function() {
          if (this.responseText == "OK") {
            document.location = "/qa/compare/" + next_pos;
          } else {
            alert("There was an error trying to apply the match");
          }
        };
        xhttp.open("POST", "/qa/compare/" + pos + "/apply", true);
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send(JSON.stringify({
          "approved": does_match,
          "skip": skip,
          "time": start_time,
          "pos": pos
        }));
      }

      function approve() { are_equal(true, false); }
      function reject() { are_equal(false, false); }
      function skip() { are_equal(false, true); }

      function toggle_show_more() {
        var element = document.getElementsByTagName('body')[0];
        element.classList.toggle("hidden");
      }
    </script>
  </head>
  <body class="show_more hidden">
    <div class="main">
      <div class="wrapper">
        <div>
          <h1><img src="/public/images/logo.png" />Compare</h1>
          <div class="data">
            <div class="spacer a"></div>
            <div class="spacer b"></div>
            <div class="product">
              <div class="img">
                <div class="a">
                  <img src="{{data[ui_config.image_url.a]}}">
                </div>
                <div class="b">
                  <img src="{{data[ui_config.image_url.b]}}">
                </div>
              </div>
              <div class="name">
                <h2 class="a" title="{{data[ui_config.product_name.a]}}">
                  <span>{{data[ui_config.product_name.a]|diff_single(before = data[ui_config.product_name.b])}}</span>
                </h2>
                <h2 class="b" title="{{data[ui_config.product_name.b]}}">
                  <span>{{data[ui_config.product_name.b]|diff_single(before = data[ui_config.product_name.a])}}</span>
                </h2>
              </div>
              <div class="extra-data">
                <div class="a">
                  <div>
                    {% for data_config in ui_config.data %}
                      <div {% if data_config.show_more %}class="show_more_data"{% endif %}>
                        <div class="title">{{data_config.label}}</div>
                        <div class="value">
                          {% if data_config.no_diff %}
                            {% if data_config.a %}
                              {{data[data_config.a]}}
                            {% endif %}
                          {% else %}
                            {% if data_config.a and data_config.b %}
                              {{data[data_config.a]|diff_single(before = data[data_config.b])}}
                            {% else %}
                              {% if data_config.a %}
                                {{data[data_config.a]|diff_single(before = "")}}
                              {% endif %}
                            {% endif %}
                          {% endif %}
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
                <div class="b">
                  <div>
                    {% for data_config in ui_config.data %}
                      <div {% if data_config.show_more %}class="show_more_data"{% endif %}>
                        <div class="title">{{data_config.label}}</div>
                        <div class="value">
                          {% if data_config.no_diff %}
                            {% if data_config.b %}
                              {{data[data_config.b]}}
                            {% endif %}
                          {% else %}
                            {% if data_config.a and data_config.b %}
                              {{data[data_config.b]|diff_single(before = data[data_config.a])}}
                            {% else %}
                              {% if data_config.b %}
                                {{data[data_config.b]|diff_single(before = "")}}
                              {% endif %}
                            {% endif %}
                          {% endif %}
                        </div>
                      </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="options">
            <a href="javascript:approve();" class="button yes">
              YES
            </a>
            <span class="decision">
              <a href="javascript:toggle_show_more();" class="show_more_trigger">
                <span class="less">&uarr;show less;&uarr;</span>
                <span class="more">&darr;show more&darr;</span>
              </a>
              Are the same?
            </span>
            <a href="javascript:reject()" class="button no">
              NO
            </a>
            <a href="javascript:skip()" class="button skip">
              SKIP
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
